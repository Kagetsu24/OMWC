extends ../../../layout.pug

block content
    .container.center-align
        .row
            .col.s12
                h4 Manage Criterias 
                    a.btn.waves-effect.waves-light(href="/admin/judging/criterias/create") Create

        .row
            .col.s12
                table.highlight.responsive-table
                    thead
                        tr
                            th Name
                            th Max Score
                            th
                    
                    tbody
                        each criteria in criterias
                            tr
                                td= criteria.name
                                td= criteria.maxScore
                                td
                                    a.btn-flat.waves-effect.waves-teal(href="/admin/judging/criterias/edit/" + criteria.id) Edit
