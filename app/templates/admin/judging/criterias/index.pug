extends ../../../layout.pug
include ../../../mixins/buttons.pug

block content
    .container.text-center
        .row
            .col-sm
                h4 Manage Criterias 
                    +link-button('Create', '/admin/judging/criterias/create')

        .row
            .col-sm
                table.table.table-hover
                    thead
                        tr
                            th Name
                            th Max Score
                            th
                    
                    tbody
                        each criteria in criterias
                            tr
                                td= criteria.name
                                td= criteria.maxScore
                                td
                                    +link-button('Edit', '/admin/judging/criterias/edit/' + criteria.id)
