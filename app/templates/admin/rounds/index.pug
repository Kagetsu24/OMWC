extends ../../layout.pug
include ../../mixins/buttons.pug

block content
    .container.text-center
        .row
            .col-sm
                h4 Manage Rounds 
                    +link-button('Create', '/admin/rounds/create')

        .row
            .col-sm
                table.table.table-hover
                    thead
                        tr
                            th Title
                            th Information
                            th Anonymised Link
                            th Submission Start
                            th Submission End
                            th Judging Start
                            th Judging End
                            th
                    
                    tbody
                        each round in rounds
                            tr
                                td= round.title
                                td= round.information
                                td
                                    a(href=round.anonymisedLink) #{round.anonymisedLink}
                                td= round.submissionsStartedAt
                                td= round.submissionsEndedAt
                                td= round.judgingStartedAt
                                td= round.judgingEndedAt
                                td
                                    +link-button('Edit', '/admin/rounds/edit/' + round.id)
