extends layout.pug

block content
    form.container.center-align(action="/mappersChoice/save", method="post")
        .row
            .col.s12
                h4 Choose between 3 and 5 mappers for your team

                table.hover
                    thead
                        tr
                            th Applicant
                    tbody
                        each application in applications
                            tr
                                td
                                    label
                                        input.filled-in(
                                            type="checkbox"
                                            name="applicationsIds"
                                            value=application.id
                                            checked=(team.users && team.users.find(u => u.id === application.user.id) !== undefined)
                                        )
                                        span= application.user.username

        .row
            .col.s12
                button.btn.waves-effect.waves-light(type="submit") Save
