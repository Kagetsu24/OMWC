extends layout.pug
include ./mixins/buttons.pug
include ./mixins/extras.pug

block content
    .container.text-center
        .row
            .col-sm
                h1 osu! Mapping World Cup

                if user
                    p #{user.username} #{user.country.name}
                    +img-flag(user.country.code)
                else
                    form(action="/login" method="GET")
                        button.btn.btn-primary(type="submit")
                            | Verify your osu! account to continue

        if user
            .row.my-2
                .col-sm
                    +link-button(
                        captainApplication ? 'Edit your team captain application' : 'Apply for team captain',
                        '/applications/captains/edit'
                    )

            .row.my-2
                .col-sm
                    if mapperApplication
                        +link-button-disabled(`You've applied as a mapper`)
                    else
                        +link-button('Apply as a mapper', '/applications/mappers/edit')

            .row.my-2
                .col-sm
                    +link-button(
                        judgeApplication ? 'Edit your judge application' : 'Apply as a judge',
                        '/applications/judges/edit'
                    )

            hr

            .row.my-2
                .col-sm
                    +link-button(
                        'Captain Voting',
                        '/captainVoting'
                    )

            .row.my-2
                .col-sm
                    +link-button(
                        'Mappers Choice',
                        '/mappersChoice'
                    )

            .row.my-2
                .col-sm
                    +link-button(
                        '.osz submissions',
                        '/submissions'
                    )

            hr

            .row.my-2
                .col.sm
                    +link-button(
                        'Judging',
                        '/judging'
                    )
